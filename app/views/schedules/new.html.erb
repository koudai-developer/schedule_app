<h1>新しい予定を作成</h1>

<%= render "shared/error", obj: @schedule %>

<div class="form-container">
  <%= form_with model: @schedule, local: true, class: "schedule-form" do |form| %>
    <div class="form-group">
      <%= form.label :title, 'タイトル', class: "form-label" %>
      <%= form.text_field :title, class: "form-input", placeholder: "タイトルを入力" %>
    </div>

    <div class="form-group">
      <%= form.label :start_date, '開始日', class: "form-label" %>
      <%= form.date_select :start_date, class: "form-input" %>
    </div>

    <div class="form-group">
      <%= form.label :end_date, '終了日', class: "form-label" %>
      <%= form.date_select :end_date, class: "form-input" %>
    </div>

    <div class="form-group">
      <%= form.label :all_day, '終日', class: "form-label" %>
      <%= form.check_box :all_day, class: "form-checkbox" %>
    </div>

    <div class="form-group">
      <%= form.label :memo, 'メモ', class: "form-label" %>
      <%= form.text_area :memo, class: "form-textarea", placeholder: "メモを入力" %>
    </div>

    <div class="form-actions">
      <%= link_to 'キャンセル', schedules_path, class: "btn btn-secondary" %>
      <%= form.submit '保存', class: "btn btn-primary" %>
    </div>
  <% end %>
</div>